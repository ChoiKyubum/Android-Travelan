<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@id/btnAddFavs"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnAddFavs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="16dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:autoPlay="false"
            app:fillColor="@color/colorPrimary"
            app:pageColor="#FF777777"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/location"
            />

        <Button
            android:id="@+id/planButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:includeFontPadding="false"
            android:text="여행 일정 보기"
            app:layout_constraintTop_toBottomOf="@id/photo" />

        <ImageView
            android:id="@+id/userThumb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toBottomOf="@id/planButton" />

        <TextView
            android:id="@+id/userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="userId"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/userThumb"
            app:layout_constraintTop_toBottomOf="@id/planButton" />

        <TextView
            android:id="@+id/contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="contents"
            app:layout_constraintLeft_toRightOf="@id/userThumb"
            app:layout_constraintTop_toBottomOf="@id/userId"
            app:layout_constraintBottom_toTopOf="@id/commentButton"/>

        <Button
            android:id="@+id/commentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="댓글보기"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/contents" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>